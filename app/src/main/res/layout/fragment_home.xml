<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weather_help"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="8dp"
            android:text="@string/weather_help"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/search_box"
            app:layout_constraintTop_toBottomOf="@id/weather_help"
            app:layout_constraintBottom_toTopOf="@id/weather_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/search_button"
            android:hint="@string/search_help"
            android:textAlignment="center"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/search_button"
            app:layout_constraintStart_toEndOf="@id/search_box"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/search_box"
            app:layout_constraintBottom_toBottomOf="@id/search_box"
            android:text="@string/search"
            android:layout_marginEnd="8dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/weather_card"
            app:layout_constraintTop_toBottomOf="@id/search_box"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="8dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/card_weather_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Title"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/card_weather_subtitle"
                    app:layout_constraintStart_toStartOf="@id/card_weather_title"
                    app:layout_constraintTop_toBottomOf="@id/card_weather_title"
                    android:text="Sub Title"/>
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/card_weather_icon"
                    app:layout_constraintTop_toTopOf="@id/card_weather_title"
                    app:layout_constraintBottom_toBottomOf="@id/card_weather_subtitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/weather"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/card_weather_temp"
                    app:layout_constraintStart_toStartOf="@id/card_weather_subtitle"
                    app:layout_constraintTop_toBottomOf="@id/card_weather_subtitle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="77" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/card_weather_time"
                    app:layout_constraintTop_toBottomOf="@id/card_weather_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="2023-06-01T18:09:26"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_circular"
        android:layout_margin="32dp"
        android:indeterminate="true"
        android:layout_gravity="center"
        app:indicatorSize="64dp"
        app:trackThickness="8dp" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
